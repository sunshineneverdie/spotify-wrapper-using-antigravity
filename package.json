{
    "name": "spotify-wrapper",
    "version": "1.0.0",
    "description": "Premium Spotify Wrapper with Lava Animation",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "package": "electron-packager . Spotify-Premium --platform=win32 --arch=x64 --icon=spotify_icon_premium.ico --overwrite",
        "dist": "cross-env ELECTRON_BUILDER_CACHE=D:/ebcache electron-builder"
    },
    "build": {
        "appId": "com.spotify.wrapper.premium",
        "productName": "Spotify Premium",
        "directories": {
            "output": "dist",
            "buildResources": "build-resources"
        },
        "win": {
            "target": "nsis",
            "icon": "spotify_icon_premium.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "shortcutName": "Spotify Premium",
            "installerIcon": "spotify_icon_premium.ico",
            "uninstallerIcon": "spotify_icon_premium.ico"
        },
        "files": [
            "**/*",
            "index.html",
            "main.js",
            "preload.js",
            "style.css",
            "spotify_icon_premium.ico"
        ]
    },
    "devDependencies": {
        "cross-env": "^10.1.0",
        "electron": "^33.0.0",
        "electron-builder": "^26.7.0",
        "electron-installer-windows": "^3.0.0",
        "electron-packager": "^17.1.2",
        "electron-winstaller": "^5.4.0",
        "png-to-ico": "^3.0.1"
    }
}
